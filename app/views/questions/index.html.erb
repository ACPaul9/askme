<div class="container">
  <h2 class="title-lg mb">Все вопросы</h2>

  <% @question.each do |question| %>
    <%hidden_question = question.hidden? ? "question-hidden" : "question-visible" %>
    <%= content_tag :p, class: ["mb-sm", hidden_question] do %>
      <%= link_to "Вопрос #{question.id}", question_path(question) %>
    <% end %>
  <% end %>

  <%= link_to 'Создать новый вопрос', new_question_path, class: 'button button-main' %>
</div>

